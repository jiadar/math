\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
7\sin\theta+24\cos\theta & = & A\sin(\theta+\alpha)\\
\sin\theta+3\cos\theta & = & \frac{A\sin\theta}{7}\\
\sin\theta-\frac{A\sin\theta}{7}+3\cos\theta & = & 0\\
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
When 
\begin_inset Formula $\theta=\frac{\pi}{4}$
\end_inset

, then 
\begin_inset Formula $\sin\theta=\cos\theta=\frac{\sqrt{2}}{2}$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\frac{\sqrt{2}}{2}-\frac{A\sqrt{2}}{14}+\frac{3\sqrt{2}}{2} & = & 0\\
