\begin_layout Standard
3.
 A triangle has sides of length 5, 7, and 8.
 Use the law of cosines to find the angle opposite the side of length 7
 to the nearest degree.
 (ref.
 p 349)
\end_layout

\begin_layout Standard
\begin_inset Formula $a=5$
\end_inset

, 
\begin_inset Formula $b=7,$
\end_inset


\begin_inset Formula $c=8$
\end_inset


\end_layout

\begin_layout Standard
Solve for the largest angle first.
\end_layout

\begin_layout Standard
Angle C:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\cos C & = & \frac{a^{2}+b^{2}-c^{2}}{2ab}\\
 &  & \frac{5^{2}+7^{2}-8^{2}}{2\cdot5\cdot7}\\
 &  & \frac{1}{7}\\
C & = & \arccos\left(\frac{1}{7}\right)\\
 &  & 1.42745\\
 &  & 1.42745\cdot\left(\frac{180}{\pi}\right)\\
 &  & 81.787\textdegree
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Solve for the smallest angle next.
\end_layout

\begin_layout Standard
Angle A:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\cos A & = & \frac{b^{2}+c^{2}-a^{2}}{2bc}\\
 &  & \frac{7^{2}+8^{2}-5^{2}}{2\cdot7\cdot8}\\
 &  & \frac{11}{14}\\
A & = & \arccos\frac{11}{17}\\
 &  & 0.66695\\
 &  & 0.66695\cdot\frac{180}{\pi}\\
 &  & 38.213\textdegree
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Standard
Solve for angle B.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
B & = & 180\textdegree-A-C\\
 &  & 180\textdegree-81.787\textdegree-38.213\textdegree\\
 &  & 60\textdegree
\end{eqnarray*}

\end_inset


\end_layout

